<h1>Categories#create</h1>
<p>Find me in app/views/categories/create.html.erb</p>

<%= form_with url: user_categories_path, method: :post, scope: :post, local: true do |form| %>
  <div >
    <%= form.label :title, "Category name" %>
    <%= form.text_field :name, placeholder: "Name", required: true %>
  </div>

  <div >
    <%= form.label :title, "Add Icon" %>
    <%= form.file_field :icon, placeholder: "Add file", required: true %>
  </div>
  
  <div>
    <%= form.submit "Add Category", class: "btn btn-primary", disable_with: "Please wait..." %>
  </div>
<% end %>